<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WizardWarz"
        xmlns:Custom="http://schemas.microsoft.com/surface/2008" x:Class="WizardWarz.MainWindow"
        mc:Ignorable="d"
        Title="Wizard Warz" Height="1080" Width="1080">
    <Canvas Name="MainCanvas">
        <Canvas Name="AudioCanvas">
            <Grid Name="audioTile" Panel.ZIndex="5" Height="1080" Width="1080" >
                <Label x:Name="volLabel" Content="Volume" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontFamily="Stencil"/>
                <Image x:Name="volImage" HorizontalAlignment="Center" Height="64" Margin="0,0,0,0" VerticalAlignment="Center" Width="64"
                   Source="Resources/audioOn.png" Stretch="Fill" TouchDown="image_TouchDown" MouseLeftButtonDown="image_MouseLeftButtonDown">
                </Image>
            </Grid>
        </Canvas>
    </Canvas>
</Window>
